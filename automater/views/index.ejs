<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        h1 {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
            margin: 0;
        }
        h2 {
            margin: 20px 0 10px 0;
            text-align: center;
        }
        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        li {
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 10px;
            padding: 10px;
            width: 300px;
        }
        h3 {
            margin: 0 0 10px 0;
        }
        img {
            display: block;
            margin: 0 auto;
        }
        p {
            margin: 0;
        }
    </style>
</head>
<body>
    <h1><%= message %></h1>
    <h2>All Competitions from UNSTOP</h2>

    <ul>
        <% data.forEach(function(post) { %>
            <li>
                <h3><%= post.title %></h3>
                <img src="<%= post.image %>" alt="<%= post.title %>" style="width:150px; height:auto;">
                <p>Registered: <%= post.registered %></p>
                <p>Days Left: <%= post.daysLeft %></p>
            </li>
        <% }); %>
    </ul>
</body>
</html>
